<% if @results.blank? %>

  No data

<% else %>

  <ul>
    <% for result in @results %>
      <li>
        <%=h result[0] %>
        | <%=number_with_delimiter result[1] %>
      </li>
    <% end %>
  </ul>

  <div class="short-link">
    <%= link_to(question_url(:question => @question.question), question_url(:question => @question.question)) %>
    <%= clippy(question_url(:question => @question.question), '#000000') %>
  </div>
<% end %>